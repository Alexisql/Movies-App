<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MoviesApp" parent="Theme.Material3.DayNight.NoActionBar" />

    <style name="Theme.MoviesApp" parent="Base.Theme.MoviesApp">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="TextMovie">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/backgroundSplash</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.MoviesApp</item>
    </style>

</resources>